{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/yash-peiris/data-science-job-visualization/main/data/Jobs-per-date.csv"
    },
    "width": "container",
    "mark": {
      "type": "line",
      "interpolate": "monotone"
    },
    "encoding": {
      "x": {
        "field": "Date",
        "timeUnit": "month"
      },
      "y": {
        "field": "Jobs",
        "aggregate" :"sum",
        "scale": {"domain": [0, 100]},
        "title": "Job Listings"
      },
      "color": {
        "timeUnit": "year",
        "type": "nominal",
        "field": "Date",
        "title": "Year"
      }
    },
    "config": {}
  }